@page "{id:int?}"
@model Banciu_Adrian_Lab2.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>


<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CategoryData.Categories.First().CategoryName)</th>
        </tr>
    </thead>
    tbody>
    @foreach (var category in Model.CategoryData.Categories)
    {
        <tr class="@(category.ID == Model.CategoryID ? "table-success" : "")">
            <td>
                <a asp-page="./Index" asp-route-id="@category.ID">@category.CategoryName</a>
            </td>
        </tr>
    }
    </tbody>
</table>
@if (Model.CategoryData.Books != null)
{
    <h3>Books in Selected Category</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.CategoryData.Books)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author.FullName</td>
                </tr>
            }
        </tbody>
    </table>
}